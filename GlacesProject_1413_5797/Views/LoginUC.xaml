<UserControl x:Class="PL.Views.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <TextBox x:Name="Id"  HorizontalAlignment="Left" Height="23" Margin="150,30,0,0" TextWrapping="Wrap" Text="{Binding Id}" VerticalAlignment="Top" Width="100" />
        <PasswordBox  x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="150,70,0,0" PasswordChanged="PasswordBox_PasswordChanged" VerticalAlignment="Top" Width="100"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="150,120,0,0" VerticalAlignment="Top" Width="100" />
        <Button Content="Register" HorizontalAlignment="Left" Margin="150,160,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</UserControl>
