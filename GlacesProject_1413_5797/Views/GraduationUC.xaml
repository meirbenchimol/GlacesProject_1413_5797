<UserControl x:Class="PL.Views.GraduationUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <UserControl.Resources>
        <Style x:Key="InputStyle"
           TargetType="TextBox">

            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Background" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="280"/>
            </Grid.RowDefinitions>
            <Image  Name="Image" HorizontalAlignment="Left" Source="{Binding Image}" Grid.Row="0" Height="66" Margin="42,24,0,0" VerticalAlignment="Top" Width="100"/>
            <Grid Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Name="ID" HorizontalAlignment="Left" Height="23"  Margin="19,7,0,0" Grid.Row="0" TextWrapping="Wrap" Text="{Binding ID}"  VerticalAlignment="Top" Width="120"/>
                <TextBlock  Name="ShopID" HorizontalAlignment="Left" Height="23" Margin="19,10,0,0" Grid.Row="1" TextWrapping="Wrap"  Text="{Binding ShopID}"  VerticalAlignment="Top" Width="120" />
                <TextBlock  Name="Presentation" HorizontalAlignment="Left" Height="23" Margin="19,7,0,0" Grid.Row="2" TextWrapping="Wrap" Text="{Binding Presentation}"  VerticalAlignment="Top" Width="120"/>
                <TextBlock Name="Grade" HorizontalAlignment="Left" Height="23" Margin="19,9.8,0,0" Grid.Row="3" TextWrapping="Wrap" Text="{Binding Grade}" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Name="Energy" Height="23" Margin="19,12.2,0,-33.6" Grid.Row="4" TextWrapping="Wrap" Text="{Binding  Energy}" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left"  Name="Proteins" Height="23" Margin="19,7,0,0" Grid.Row="5" TextWrapping="Wrap" Text="{Binding Proteins}" VerticalAlignment="Top" Width="120"/>
                <TextBlock HorizontalAlignment="Left" Name="Calories" Height="23" Margin="19,7,0,0" Grid.Row="6" TextWrapping="Wrap" Text="{Binding Calories}" VerticalAlignment="Top" Width="120"/>

            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="120" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Label Content="Your Grade : " FontWeight="Bold" Grid.Column="0"   Grid.Row="1" HorizontalAlignment="Left" Margin="10,7.2,0,0" VerticalAlignment="Top" Width="86"/>
            <Slider Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" Margin="10,10.2,0,0" Minimum="0" Maximum="10" Value="{Binding Grades}" VerticalAlignment="Top" Width="259"/>
            <Label Content="Comments : "  FontWeight="Bold" HorizontalAlignment="Left" Margin="10,4.4,0,0" Grid.Row="2" VerticalAlignment="Top" Width="348" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
            <TextBox HorizontalAlignment="Left" Height="50" Margin="10,27.8,0,-73.8" Grid.Row="3" TextWrapping="Wrap" Text="{Binding Comments}" VerticalAlignment="Top" Width="356" Grid.ColumnSpan="2"/>
            <Image Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="55" Margin="35,76.4,0,-69" Grid.Row="6" VerticalAlignment="Top" Width="297"/>
            <Label Content="Add an Image if you want : "  FontWeight="Bold" HorizontalAlignment="Left" Margin="10,83.8,0,-73" Grid.Row="4" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="169"/>
            <Button Content="Update" Command="{Binding MyCommand}" HorizontalAlignment="Left" Margin="0,148.4,0,-103.4" Grid.Row="6" VerticalAlignment="Top" Width="75" Grid.Column="1"/>



        </Grid>




    </Grid>
</UserControl>
