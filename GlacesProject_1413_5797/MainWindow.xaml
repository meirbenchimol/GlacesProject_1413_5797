<Window x:Class="GlacesProject_1413_5797.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlacesProject_1413_5797"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Padding="15" Click="ShopArea" BorderThickness="2">Shop Area</Button>
        </StackPanel>

        <Grid x:Name="inner_grid" Grid.Row="1" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="3">

            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" FontSize="30" Text="Welcome to Ice Cream Center"></TextBlock>
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <Button Margin="20" Width="150" Height="50" BorderThickness="2" FontWeight="Bold">Search Ice Cream</Button>
                    <Button Margin="20" Width="150" Height="50" BorderThickness="2" FontWeight="Bold">Graduate Ice Cream</Button>
                </StackPanel>
            </Grid>

            

        </Grid>


       

    </Grid>
</Window>
